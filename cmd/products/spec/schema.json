{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/benc-uk/dapr-store/master/cmd/products/spec/schema.json",
  "type": "object",
  "title": "Product entity",
  "required": [
    "id",
    "name",
    "cost",
    "description",
    "image",
    "onOffer"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The product ID"
    },
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The product name"
    },
    "cost": {
      "$id": "#/properties/cost",
      "type": "number",
      "minimum": 0,
      "title": "The cost of the product"
    },
    "description": {
      "$id": "#/properties/description",
      "type": "string",
      "title": "Product description"
    },
    "image": {
      "$id": "#/properties/image",
      "type": "string",
      "title": "The product image URL"
    },
    "onOffer": {
      "$id": "#/properties/onOffer",
      "type": "boolean",
      "title": "Is the product on special offer"
    }
  }
}